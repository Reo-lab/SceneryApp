<div class="login-form-container d-flex justify-content-center align-items-center min-vh-100" style="margin-top: -50px;">
  <div class="card shadow-sm p-4" style="max-width: 400px; width: 100%;">
    <div class="card-body">
      <h2 class="text-center mb-4">新規登録</h2>

      <%= form_with(model: @user, local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
        <div class="mb-3">
          <%= form.label :name, "名前", class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control', required: true, placeholder: "名前を入力してください" %>
        </div>

        <div class="mb-3">
          <%= form.label :email, "メールアドレス", class: 'form-label' %>
          <%= form.email_field :email, class: 'form-control', required: true, placeholder: "メールアドレスを入力してください" %>
        </div>

        <div class="mb-3">
          <%= form.label :password, "パスワード", class: 'form-label' %>
          <%= form.password_field :password, class: 'form-control', required: true, placeholder: "パスワードを入力してください" %>
        </div>

        <div class="mb-3">
          <%= form.submit "登録", class: 'btn btn-primary w-100' %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= link_to "ログインはこちら", new_session_path, class: "d-block text-decoration-none" %>
      </div>
    </div>
  </div>
</div>
