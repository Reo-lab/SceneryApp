<h1>新規ユーザー登録</h1>

<%= form_with(model: @user, local: true) do |form| %>
  <div>
    <%= form.label :name, "名前" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, "メールアドレス" %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password, "パスワード" %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "登録" %>
  </div>
<% end %>